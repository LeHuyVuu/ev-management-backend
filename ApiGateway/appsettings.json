{
  "Kestrel": {
    "Endpoints": {
      "Http":  { "Url": "http://localhost:1111" },
      "Https": { "Url": "https://localhost:4443" }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "brand-route": {
        "ClusterId": "brand-cluster",
        "Match": {
          "Hosts": [ "brand.local" ],
          "Path": "/{**catch-all}"
        }
      },
      "dealer-route": {
        "ClusterId": "dealer-cluster",
        "Match": {
          "Hosts": [ "dealer.local" ],
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "brand-cluster": {
        "Destinations": {
          "https": { "Address": "https://localhost:2609/" },
          "http":  { "Address": "http://localhost:2608/" }
        },
        "HttpClient": { "DangerousAcceptAnyServerCertificate": true }
      },
      "dealer-cluster": {
        "Destinations": {
          "https": { "Address": "https://localhost:1801/" },
          "http":  { "Address": "http://localhost:1802/" }
        },
        "HttpClient": { "DangerousAcceptAnyServerCertificate": true }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.ReverseProxy": "Debug"
    }
  }
}
